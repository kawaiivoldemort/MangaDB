@using System.IO
@using System.Linq;
@{
    string webrootPath = Startup.envPath;
    string carouselImagePath = "/images/AdPanel";
    string[] titleImages = (
        from filePath
        in Directory.GetFiles(Startup.envPath + carouselImagePath, "*.jpg")
        select System.IO.Path.GetFileNameWithoutExtension(filePath)
    ).ToArray();
}
<!DOCTYPE html>
<html>
    <head>
        <title>
            Welcome to Manga DB, your One Stop Shop for all Manga
        </title>
        <style>
           #mangaAdCarousel.carousel.item {
               width: 100%;
           }
        </style>
        <script>

        </script>
    </head>
    <body>
        <div id="mangaAdCarousel" class="carousel slide" data-ride="carousel">
            <div class="carousel-inner" role="listbox">
                @if (titleImages.Length > 0)
                {
                    <div class="item active">
                        <img src="@(carouselImagePath + "/" + titleImages[0] + ".jpg")" alt="@titleImages[0]">
                    </div>
                    @for (var i = 1; i < titleImages.Length; i++)
                    {
                        <div class="item">
                            <img src="@(carouselImagePath + "/" + titleImages[i] + ".jpg")" alt="@titleImages[i]">
                        </div>
                    }
                }
            </div>
            <a class="left carousel-control" href="#mangaAdCarousel" role="button" data-slide="prev">
                <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="right carousel-control" href="#mangaAdCarousel" role="button" data-slide="next">
                <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
        <h1>Manga DB</h1>
    </body>
</html>