@using System.IO
@using System.Linq;
<!DOCTYPE html>
<html>
    <head>
        <link rel="stylesheet" type="text/css" href="~/css/mangapage.css" />
        <script src="~/js/jquery-3.1.1.min.js"></script>
        <script src="~/js/mangapage.js"></script>
        <script>
            name = @ViewData["mangaName"];
        </script>
    </head>
