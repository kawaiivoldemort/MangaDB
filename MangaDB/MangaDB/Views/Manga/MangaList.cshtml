@using System.IO
@using System.Linq;
<!DOCTYPE html>
<html>
    <head>
        <link rel="stylesheet" type="text/css" href="~/css/mangapage.css" />
        <script src="~/js/jquery-3.1.1.min.js"></script>
        <script>
            var $jq = jQuery.noConflict();
            getManga = function() {
                $jq.ajax({
                    dataTye: "json",
                    url: "listofmanga.aspx",
                    success: populateGrid
                });
            }
            populateGrid = function (mangaList) {
                gridRow = document.createElement("div");
                $jq(gridRow).addClass('row');
                for(var manga in mangaList) {
                    if(gridRow.childElementCount >= 6) {
                        $jq('#mainDiv').append(gridRow);
                        gridRow = document.createElement("div");
                        $jq(gridRow).addClass('row');
                    }
                    gridCell = document.createElement("div");
                    $jq(gridCell).addClass('col-md-2');
                    //fill gridCell with data
                    gridCell.innerHTML = "Manga text";
                    $jq(gridRow).append(gridCell);
                }
            }
        </script>
    </head>
    <body onload="getManga()">
        <div id="mainDiv" class="container">
            
        </div>
    </body>
</html>